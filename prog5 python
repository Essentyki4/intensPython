n = int(input("Ввкдите количество чисел n: "))
negative_count = 0
positive_count = 0
zero_count = 0
i = 0
while i < n:
    num = int(input(f"Введите число {i+1}: "))
    if num < 0:
        negative_count +=1
    elif num > 0:
        positive_count +=1
    else:
        zero_count +=1
    i +=1
    print(f"Количеслво отрицательных чисал {negative_count}: ")
    print(f"Количество положительных чисел {positive_count}: ")
    print(f"Количество нулей {zero_count}: ")
